<Window x:Class="OpenClawWinManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenClawWinManager"
        mc:Ignorable="d"
        Title="OpenClawWinManager"
        Height="620"
        Width="980"
        Loaded="MainWindow_Loaded">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="360"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Grid.Column="0"
              Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Distro"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       Grid.Column="0" />
            <TextBox x:Name="DistroTextBox"
                     Grid.Column="1"
                     Height="28"
                     VerticalContentAlignment="Center"
                     Text="Ubuntu"
                     TextChanged="DistroTextBox_TextChanged" />
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="0"
              Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Gateway Port"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       Grid.Column="0" />
            <TextBox x:Name="PortTextBox"
                     Grid.Column="1"
                     Width="180"
                     Height="28"
                     VerticalContentAlignment="Center"
                     Text="18789"
                     TextChanged="GatewayPortTextBox_TextChanged" />
        </Grid>

        <UniformGrid Grid.Row="2"
                     Grid.Column="0"
                     Rows="2"
                     Columns="4"
                     Margin="0,0,0,8">
            <Button x:Name="CheckButton"
                    Content="Check"
                    MinWidth="120"
                    Margin="0,0,8,8"
                    Click="CheckButton_Click" />
            <Button x:Name="InstallButton"
                    Content="Install"
                    MinWidth="120"
                    Margin="0,0,8,8"
                    IsEnabled="False"
                    Click="InstallButton_Click" />
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    MinWidth="120"
                    Margin="0,0,8,8"
                    IsEnabled="False"
                    Click="CancelButton_Click" />
            <Button x:Name="StartGatewayButton"
                    Content="Start Gateway"
                    MinWidth="120"
                    Margin="0,0,8,8"
                    IsEnabled="False"
                    Click="StartGatewayButton_Click" />
            <Button x:Name="OnboardButton"
                    Content="Onboard"
                    MinWidth="120"
                    Margin="0,0,8,8"
                    IsEnabled="False"
                    Click="OnboardButton_Click" />
            <Button x:Name="StopGatewayButton"
                    Content="Stop all OpenClaw"
                    MinWidth="120"
                    Margin="0,0,8,8"
                    IsEnabled="True"
                    Click="StopGatewayButton_Click" />
            <Button x:Name="HealthMonitorButton"
                    Content="Monitoring"
                    MinWidth="120"
                    Margin="0,0,8,8"
                    IsEnabled="False"
                    Click="HealthMonitorButton_Click" />
        </UniformGrid>

        <StackPanel Grid.Row="3"
                    Grid.Column="0"
                    Orientation="Vertical"
                    Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="StatusIcon"
                           Text="..."
                           FontSize="16"
                           Margin="0,0,6,0"
                           VerticalAlignment="Center"
                           Foreground="Gray" />
                <TextBlock Text="Status:" VerticalAlignment="Center" />
                <TextBlock x:Name="StatusLabel"
                           Text="Idle"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock x:Name="MonitorIcon"
                           Text="..."
                           FontSize="14"
                           Margin="0,0,6,0"
                           VerticalAlignment="Center"
                           Foreground="Gray" />
                <TextBlock x:Name="GatewayMonitorSummary"
                           Text="No monitor target yet."
                           TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock x:Name="TokenIcon"
                           Text="..."
                           FontSize="14"
                           Margin="0,0,6,0"
                           VerticalAlignment="Center"
                           Foreground="Gray" />
                <TextBlock x:Name="GatewayTokenSummary"
                           Text="Token status unknown."
                           TextWrapping="Wrap" />
            </StackPanel>
            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Monitor Port"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0" />
                <TextBox x:Name="MonitorPortTextBox"
                         Grid.Column="1"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Text="18789"
                         Margin="0,0,8,0" />
                        <Button x:Name="AddMonitorPortButton"
                                Grid.Column="2"
                                Content="Add"
                                Height="28"
                                Width="72"
                                Click="AddMonitorPortButton_Click" />
            </Grid>
        </StackPanel>

        <ProgressBar x:Name="InstallProgressBar"
                     Grid.Row="4"
                     Grid.Column="0"
                     Height="18"
                     Minimum="0"
                     Maximum="100"
                     Margin="0,0,0,8"
                     IsIndeterminate="False" />

        <TextBlock Grid.Row="5"
                   Grid.Column="0"
                   Text="WSL distros"
                   FontWeight="SemiBold"
                   Margin="0,0,0,4" />
        <ListBox x:Name="DistroListBox"
                 Grid.Row="5"
                 Grid.Column="0"
                 Height="126"
                 Margin="0,22,0,8"
                 SelectionChanged="DistroListBox_SelectionChanged" />

        <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   Text="Logs"
                   FontWeight="SemiBold"
                   Margin="0,0,0,4" />
        <TextBox x:Name="LogsTextBox"
                 Grid.Row="6"
                 Grid.Column="0"
                 Margin="0,22,0,0"
                 AcceptsReturn="True"
                 AcceptsTab="False"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"
                 IsReadOnly="True"
                 IsUndoEnabled="False" />

        <Border Grid.Row="0"
                Grid.RowSpan="7"
                Grid.Column="1"
                Margin="12,0,0,0"
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                Padding="10"
                CornerRadius="6"
                Panel.ZIndex="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="OpenClaw Dashboard Token"
                           FontWeight="SemiBold"
                           FontSize="16"
                           Margin="0,0,0,8" />
                <TextBlock Grid.Row="1"
                           Text="Run Onboard and use Get token to load gateway.auth.token from config, then copy it."
                           TextWrapping="Wrap"
                           Margin="0,0,0,8" />
                <TextBox x:Name="GatewayTokenTextBox"
                         Grid.Row="2"
                         Margin="0,0,0,8"
                         MinHeight="84"
                         Text="Waiting for token..."
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         IsUndoEnabled="False" />
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal">
                    <Button x:Name="CopyTokenButton"
                            Content="Copy token"
                            Width="120"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="0,0,8,8"
                            Click="CopyGatewayTokenButton_Click" />
                    <Button x:Name="GetTokenButton"
                            Content="Get token"
                            Width="120"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,8"
                            Click="GetTokenButton_Click" />
                </StackPanel>
                <TextBlock Grid.Row="4"
                           x:Name="GatewayTokenStatus"
                           Text="Token will appear here after Onboard + Get token."
                           TextWrapping="Wrap" />
            </Grid>
        </Border>
    </Grid>
</Window>


